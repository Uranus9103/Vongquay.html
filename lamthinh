<body>
    <div class="container">
        <header>
            <h1>VÒNG QUAY MAY MẮN</h1>
            <p class="subtitle">Mỗi 30 giây sẽ có một người chơi nhận được lá x10 may mắn!</p>
        </header>

        <div class="content">
            <div class="wheel-container">
                <div class="wheel">
                    <div class="pointer"></div>
                    <div class="wheel-circle" id="wheel">
                        <!-- Các mục trên vòng quay sẽ được thêm bằng JavaScript -->
                    </div>
                    <div class="wheel-center">QUAY</div>
                </div>
                
                <div class="controls">
                    <button class="spin-btn" id="spinBtn">QUAY NGAY</button>
                    <button class="reset-btn" id="resetBtn">LÀM MỚI</button>
                </div>
            </div>

            <div class="participants-container">
                <div class="participants-header">
                    <h2>DANH SÁCH NGƯỜI CHƠI</h2>
                    <div class="timer">
                        <span id="timerValue">30</span> giây
                    </div>
                </div>
                
                <div class="add-participant">
                    <input type="text" id="participantName" placeholder="Nhập tên người chơi">
                    <button class="clear-input" id="clearInputBtn">
                        <i class="fas fa-times"></i>
                    </button>
                    <button class="add-btn" id="addBtn">THÊM</button>
                </div>
                
                <div class="participants-list" id="participantsList">
                    <!-- Danh sách người chơi sẽ được thêm bằng JavaScript -->
                </div>
            </div>
        </div>

        <div class="winner-section">
            <h2>NGƯỜI CHIẾN THẮNG</h2>
            <div class="winner-display" id="winnerDisplay">
                Chúc may mắn!
            </div>
        </div>
    </div>

    <script>
        // Khởi tạo biến và mảng
        let participants = [];
        let isSpinning = false;
        let rotation = 0;
        let timerValue = 30;
        let timerInterval;
        let luckyParticipant = null;

        // DOM Elements
        const wheel = document.getElementById('wheel');
        const spinBtn = document.getElementById('spinBtn');
        const resetBtn = document.getElementById('resetBtn');
        const participantNameInput = document.getElementById('participantName');
        const addBtn = document.getElementById('addBtn');
        const clearInputBtn = document.getElementById('clearInputBtn');
        const participantsList = document.getElementById('participantsList');
        const winnerDisplay = document.getElementById('winnerDisplay');
        const timerValueElement = document.getElementById('timerValue');

        // Màu sắc cho các phần trên vòng quay
        const colors = [
            '#FF5252', '#FF9800', '#FFEB3B', '#4CAF50',
            '#2196F3', '#9C27B0', '#E91E63', '#00BCD4'
        ];

        // Khởi tạo vòng quay
        function initializeWheel() {
            wheel.innerHTML = '';
            const anglePerItem = 360 / participants.length;
            
            participants.forEach((participant, index) => {
                const item = document.createElement('div');
                item.className = 'wheel-item';
                
                // Tính toán góc cho mỗi mục
                const startAngle = index * anglePerItem;
                item.style.transform = `rotate(${startAngle}deg)`;
                
                // Tạo nội dung cho mục
                const content = document.createElement('div');
                content.className = 'wheel-item-content';
                content.textContent = participant.name;
                content.style.color = index % 2 === 0 ? 'white' : '#333';
                
                item.appendChild(content);
                wheel.appendChild(item);
            });
        }

        // Thêm người chơi
        function addParticipant() {
            const name = participantNameInput.value.trim();
            if (name === '') {
                alert('Vui lòng nhập tên người chơi!');
                return;
            }
            
            participants.push({
                name: name,
                luckyCount: 0
            });
            
            participantNameInput.value = '';
            clearInputBtn.style.display = 'none';
            updateParticipantsList();
            initializeWheel();
        }

        // Cập nhật danh sách người chơi
        function updateParticipantsList() {
            participantsList.innerHTML = '';
            
            participants.forEach((participant, index) => {
                const participantElement = document.createElement('div');
                participantElement.className = 'participant';
                
                const nameElement = document.createElement('div');
                nameElement.className = 'participant-name';
                
                const icon = document.createElement('span');
                icon.className = 'lucky-icon';
                icon.innerHTML = '🍀';
                
                const nameText = document.createElement('span');
                nameText.textContent = participant.name;
                
                nameElement.appendChild(icon);
                nameElement.appendChild(nameText);
                
                const countElement = document.createElement('div');
                countElement.className = 'lucky-count';
                countElement.textContent = participant.luckyCount;
                
                participantElement.appendChild(nameElement);
                participantElement.appendChild(countElement);
                
                participantsList.appendChild(participantElement);
            });
        }

        // Quay vòng quay
        function spinWheel() {
            if (isSpinning || participants.length === 0) return;
            
            isSpinning = true;
            spinBtn.disabled = true;
            
            // Tạo góc quay ngẫu nhiên (ít nhất 3 vòng)
            const extraRotation = 360 * 5;
            const randomAngle = Math.floor(Math.random() * 360);
            rotation += extraRotation + randomAngle;
            
            // Áp dụng hiệu ứng quay
            wheel.style.transform = `rotate(${rotation}deg)`;
            
            // Tính người chiến thắng
            setTimeout(() => {
                const normalizedRotation = rotation % 360;
                const anglePerItem = 360 / participants.length;
                const winnerIndex = Math.floor((360 - normalizedRotation) / anglePerItem) % participants.length;
                
                const winner = participants[winnerIndex];
                displayWinner(winner.name);
                isSpinning = false;
                spinBtn.disabled = false;
                
                // Tạo hiệu ứng confetti
                createConfetti();
            }, 4000);
        }

        // Hiển thị người chiến thắng
        function displayWinner(winnerName) {
            winnerDisplay.textContent = winnerName;
            winnerDisplay.style.animation = 'none';
            setTimeout(() => {
                winnerDisplay.style.animation = 'pulse 2s infinite';
            }, 10);
        }

        // Tạo hiệu ứng confetti
        function createConfetti() {
            const confettiCount = 100;
            const container = document.body;
            
            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                
                // Màu sắc ngẫu nhiên
                const colors = ['#FF5252', '#FF9800', '#FFEB3B', '#4CAF50', '#2196F3', '#9C27B0'];
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                
                // Vị trí ngẫu nhiên
                confetti.style.left = Math.random() * 100 + 'vw';
                
                // Kích thước ngẫu nhiên
                const size = Math.random() * 10 + 5;
                confetti.style.width = size + 'px';
                confetti.style.height = size + 'px';
                
                // Animation ngẫu nhiên
                const animationDuration = Math.random() * 3 + 2;
                confetti.style.animation = `confetti-fall ${animationDuration}s linear forwards`;
                
                container.appendChild(confetti);
                
                // Xóa confetti sau khi animation kết thúc
                setTimeout(() => {
                    confetti.remove();
                }, animationDuration * 1000);
            }
        }

        // Bộ đếm thời gian
        function startTimer() {
            timerInterval = setInterval(() => {
                timerValue--;
                timerValueElement.textContent = timerValue;
                
                if (timerValue <= 0) {
                    // Chọn người chơi may mắn
                    selectLuckyParticipant();
                    timerValue = 30;
                }
            }, 1000);
        }

        // Chọn người chơi may mắn
        function selectLuckyParticipant() {
            if (participants.length === 0) return;
            
            // Chọn ngẫu nhiên một người chơi
            const randomIndex = Math.floor(Math.random() * participants.length);
            luckyParticipant = participants[randomIndex];
            
            // Tăng số lá may mắn
            luckyParticipant.luckyCount += 10;
            
            // Hiển thị thông báo
            winnerDisplay.textContent = `${luckyParticipant.name} nhận được 10 lá may mắn!`;
            
            // Cập nhật danh sách
            updateParticipantsList();
            
            // Hiệu ứng confetti
            createConfetti();
            
            // Reset thông báo sau 5 giây
            setTimeout(() => {
                if (!isSpinning) {
                    winnerDisplay.textContent = 'Chúc may mắn!';
                }
            }, 5000);
        }

        // Làm mới vòng quay
        function resetWheel() {
            rotation = 0;
            wheel.style.transform = `rotate(${rotation}deg)`;
            winnerDisplay.textContent = 'Chúc may mắn!';
        }

        // Xóa nội dung ô nhập
        function clearInput() {
            participantNameInput.value = '';
            clearInputBtn.style.display = 'none';
            participantNameInput.focus();
        }

        // Sự kiện
        addBtn.addEventListener('click', addParticipant);
        participantNameInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                addParticipant();
            }
        });
        
        participantNameInput.addEventListener('input', () => {
            if (participantNameInput.value.trim() !== '') {
                clearInputBtn.style.display = 'block';
            } else {
                clearInputBtn.style.display = 'none';
            }
        });
        
        clearInputBtn.addEventListener('click', clearInput);
        
        spinBtn.addEventListener('click', spinWheel);
        resetBtn.addEventListener('click', resetWheel);

        // Khởi động bộ đếm thời gian
        startTimer();

        // Thêm một số người chơi mẫu
        const sampleParticipants = [];
        sampleParticipants.forEach(name => {
            participants.push({
                name: name,
                luckyCount: 0
            });
        });
        
        updateParticipantsList();
        initializeWheel();
    </script>
</body>
</html>
